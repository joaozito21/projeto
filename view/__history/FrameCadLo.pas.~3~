unit FrameCadLo;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Graphics, FMX.Controls, FMX.Forms, FMX.Dialogs, FMX.StdCtrls,
  FMX.Edit, FMX.Layouts, FMX.Controls.Presentation, FMX.Objects, FMX.ListBox;

type
  TFrameCadLog = class(TFrame)
    Rectop: TRectangle;
    Label1: TLabel;
    CornerButton2: TCornerButton;
    RecTotal: TRectangle;
    Layout1: TLayout;
    Rectangle1: TRectangle;
    Layout2: TLayout;
    Layout4: TLayout;
    Label3: TLabel;
    EdtNome: TEdit;
    Layout3: TLayout;
    EdtValor: TEdit;
    LbValor: TLabel;
    Layout5: TLayout;
    Lbestoque: TLabel;
    Layout6: TLayout;
    EdtVal: TEdit;
    Label2: TLabel;
    Layout7: TLayout;
    CornerButton1: TCornerButton;
    cmbFun: TComboBox;
  private
    { Private declarations }
  public
    { Public declarations }
    constructor Create(_AOwner: TComponent);
    procedure Release;
  end;

  var
    frameCadLogin: TFrameCadLog;

implementation

uses
  bancoCliente, System.Generics.Collections,global, BancoFuncionario;

{$R *.fmx}

procedure TFrameCadLog.Release;
begin
  Name := '';

  FreeOnRelease;
  inherited;

  frameCadLogin := nil;
end;

constructor TFrameCadLog.Create(_AOwner: TComponent);
var
  lista:tobjectlist<tfun>;
  CLI:Tfun;
begin
  inherited;
  Parent := TFmxObject(_AOwner);
  with tfuncionario.Create(self) do
  begin
       lista := pegarFunc;
  end;

  for CLI in lista do
  begin
      cmbFun.Items.Add(CLI);
  end;

end;

end.
